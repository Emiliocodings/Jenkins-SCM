pipeline {
    agent any

    stages {
        stage('Pipeline cloning') {
            steps {
                echo 'Hello World, cloned pipeline'
            }
        }
        stage('Build SCM Stage') {
            steps {
                echo 'Building and cloned pipeline'
            }
        }
        stage('Deploy SCM Stage') {
            steps {
                echo 'Deploying and cloned pipeline'
            }
        }
        stage('Test SCM Stage') {
            steps {
                echo 'Testing and cloned pipeline'
            }
        }
        stage('Release SCM Stage') {
            steps {
                echo 'Releasing and cloned pipeline'
            }
        }
    }
}
