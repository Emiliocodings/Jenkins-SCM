pipeline {
    agent any

    stages {
        stage('Pipeline from SCM') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Build SCM Stage') {
            steps {
                echo 'Building from SCM'
            }
        }
        stage('Deploy SCM Stage') {
            steps {
                echo 'Deploying from SCM'
            }
        }
        stage('Test SCM Stage') {
            steps {
                echo 'Testing from SCM'
            }
        }
        stage('Release SCM Stage') {
            steps {
                echo 'Releasing from SCM'
            }
        }
    }
}
